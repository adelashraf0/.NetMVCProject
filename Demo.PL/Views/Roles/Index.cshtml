@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<br />

<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Id)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.DisplayFor(x => item.CreateAt.Day)-@Html.DisplayFor(x => item.CreateAt.Month)-@Html.DisplayFor(x => item.CreateAt.Year)</td>
                    <partial name="_ButtonsPartialView" model="item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles Found!!</h3>
    </div>
}


