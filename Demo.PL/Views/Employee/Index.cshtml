@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<a asp-action="Create" class="btn btn-primary"> Create New Employee</a>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search..." name="SearchValue" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Image)</th>
                <th>@Html.DisplayNameFor(x => x.Address)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th> 
                <th>@Html.DisplayNameFor(x => x.Salary)</th>
                <th>@Html.DisplayNameFor(x => x.HireDate)</th>
                <th>@Html.DisplayNameFor(x => x.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height="40" width="40" alt="Employee"/>
                    </td>
                    <td>@item.Address</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    <td>@item.HireDate.Day-@item.HireDate.Month-@item.HireDate.Year</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i> Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Employees Found!!</h3>
    </div>
}

